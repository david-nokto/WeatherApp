<div class="row justify-content-center @Visible">
    <div class="col-auto">
        <div class="d-inline-flex">
            <a class="mt-3 me-2">
                <i class="fa-solid fa-arrows-rotate btn fa-2xl visible @RefreshHoverClass"
                    @onclick="RefreshStats" @onmouseover="MouseOver" @onmouseout="MouseOut">
                </i>
            </a>
            <div class="text-center">
                <h3 class="mb-0 text-nowrap visible">Daily Stats</h3>
                <p class="fw-light text-nowrap">@NumberOfReadings readings today</p>
            </div>
        </div>
    </div>
    <div class="col-auto">
        <div class="ms-4 pt-2">
            <div class="d-inline-flex">
                <div class="pt-2">
                    <i class="fa-solid fa-hard-drive fa-2xl"></i>
                </div>
                <div class="ps-2 pe-3">
                    <h5 class="mb-0 text-start">Total Devices</h5>
                    <p class="sm-fs">@CountTotal devices</p>
                </div>
            </div>
            <div class="d-inline-flex">
                <div class="pt-2">
                    <SensorStatusIcon IsOnline=@true></SensorStatusIcon>
                </div>
                <div class="ps-2 pe-3">
                    <h5 class="mb-0 text-start">Devices Online</h5>
                    <p class="sm-fs">@CountOnline devices</p>
                </div>
                </div>
            <div class="d-inline-flex">
                <div class="pt-2">
                    <SensorStatusIcon IsOnline=@false></SensorStatusIcon>
                </div>
                <div class="ps-2">
                    <h5 class="mb-0 text-start">Devices Offline</h5>
                    <p class="sm-fs">@CountOffline devices</p>
                </div>
            </div>
        </div>
    </div>
</div>
