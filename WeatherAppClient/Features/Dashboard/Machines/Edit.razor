@page "/sensoredit"
@page "/sensoredit/{SensorId}"

@if (!Saved)
{
    <section class="machine-edit text-center">
        @{ 
            var isEdit = Sensor.Id != Guid.Empty;
            var title = isEdit ? $"Edit {Sensor.Name}" : "Add a new machine"; 
        }
        <h1 class="page-title text-center">@title</h1>
        <EditForm Model="@Sensor" OnValidSubmit="@HandleValidSubmit" OnInvalidSubmit="@HandleInvalidSubmit">
            <ObjectGraphDataAnnotationsValidator />
        
            <div class="form-group">
                <label for="name" class="h4 fw-bold mt-3">Name </label>
                <InputText id="name"
                    class="form-control form-control-lg form-input"
                    @bind-Value="@Sensor.Name"
                    placeholder="Enter name">
                </InputText>
                <ValidationMessage class="" For="@(() => Sensor.Name)" />
            </div>

            <div class="form-group">
                <label for="machineType" class="h4 fw-bold mt-3">Type </label>
                <InputSelect id="machineType" class="form-control form-control-lg form-input" @bind-Value="@Sensor.SensorTypeId">
                    @foreach (var type in SensorTypes)
                    {
                        <option value="@type.Id">@type.Name</option>
                    }
                </InputSelect>
                <ValidationMessage class="" For="@(() => Sensor.SensorTypeId)" />
            </div>

            <div class="form-group">
                <label for="machineLocation" class="h4 fw-bold mt-3">Location </label>
                <InputSelect id="machineLocation" class="form-control form-control-lg form-input" @bind-Value="@Sensor.LocationId">
                    @foreach (var location in Locations)
                    {
                        <option value="@location.Id">@location.City, @location.Country</option>
                    }
                </InputSelect>
                <ValidationMessage class="" For="@(() => Sensor.LocationId)" />
            </div>

            <div class="mt-3">
                @{ var submitText = isEdit ? "Save" : "Add"; }
                <button type="submit" class="btn btn-dark edit-btn mt-3">@submitText</button>
                <a class="btn btn-danger mt-3" @onclick="@NavigateToDashboard">Cancel</a>
            </div>
           
        </EditForm>
    </section>
}
else
{
    <div class="alert @StatusClass">@Message
        <div>
            <a class="btn btn-outline-success mt-3" @onclick="@NavigateToDashboard">Back to dashboard</a>
        </div>
    </div>
}



